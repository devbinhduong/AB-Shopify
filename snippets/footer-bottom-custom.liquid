{% comment %} Receive block, type_footer_link_font_size {% endcomment %}
{% liquid
  assign footer_bottom_bg = block.settings.footer_bottom_bg
  assign footer_bottom_bg_gradient = block.settings.footer_bottom_bg_gradient
  assign footer_bottom_color = block.settings.footer_bottom_color
  assign show_payment = block.settings.show_payment
%}
<style>
  {%- if footer_bottom_bg != 'rgba(0,0,0,0)' and footer_bottom_bg != blank -%}
      .footer__content-bottom{background: {% if footer_bottom_bg_gradient != blank %}{{ footer_bottom_bg_gradient }}{% else %}{{ footer_bottom_bg }}{% endif %}}
  {%- endif -%}
  .footer__content-bottom {padding-top: {{ block.settings.pdtop_footer_bottom | append: 'px' }};padding-bottom: {{ block.settings.pdbottom_footer_bottom | append: 'px' }};
      {%- if block.settings.border_top -%}
      border-top: 1px solid {{ block.settings.border_top_color }};
      {%- endif -%}
  }
  {%- if footer_bottom_color != 'rgba(0,0,0,0)' and footer_bottom_color != blank -%}
      .copyright__content{color: {{ footer_bottom_color }}}
  {%- endif -%}
</style>
<div class="footer__content-bottom">
  <div class="{% if container == 'full' %}container-full{% elsif container == '1170' %}container-1170{% elsif container == '1370' %}container-1370{% elsif container == '1470' %}container-1470{% elsif container == '1570' %}container-1570{% elsif container == '1770' %}container-1770{% else %}container layout-body--{{ settings.layout_body }}{% endif %}">
    <div class="footer-block__bottom flex items-end justify-between">
      <div class="footerBottom__left">
        <img src="{{ block.settings.left_logo  | img_url: '41x41' }}" alt="{{ store.name }}" class="footer__logo">
      </div>

      <div class="footerBottom__right flex items-center justify-between">
        {%- if block.settings.show_copyright -%}
          <div class="footer__column-item footer__copyright">
            <div
              class="copyright__content"
              style="--font-size: {{ type_footer_link_font_size }}px; --text-color: {{ block.settings.copyright_content_color }}"
            >
              {{ block.settings.copyright_content | default: ' ' }}
            </div>
          </div>
        {%- endif -%}

        {%- if block.settings.footer_bottom_content != blank -%}
          <div class="footerBottom__social">
            {{ block.settings.footer_bottom_content }}
          </div>
        {%- endif -%}

        <div class="footer__column-item footer__shop_name flex items-end">
          <img src="{{ block.settings.right_logo  | img_url: '48x28' }}" alt="{{ store.name }}" class="footer__logo">
          <small class="copyright__content">a Natsana brand</small>
        </div>
      </div>
    </div>
  </div>
</div>
